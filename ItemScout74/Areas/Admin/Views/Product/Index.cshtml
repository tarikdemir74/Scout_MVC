@model List<Product>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary text-light">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-square">   Create New Product</i>
            </a>

        </div>
    </div>
</div>


<table id="tblData" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th class="text-muted">
                Title
            </th>
            <th class="text-muted">
                ISBN
            </th>
            <th class="text-muted">
                Author
            </th>
            <th class="text-muted">
                List Price
                
            </th>
            <th class="text-muted">
                Category
            </th>
            <th></th>
        </tr>
    </thead>
</table>

@section Scripts
{
    <script src="~/js/product.js"></script>
}